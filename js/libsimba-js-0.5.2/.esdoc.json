{
    "source": "./src",
    "destination": "./docs",
    "plugins": [
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "brand": {
                    "title": "libsimba-js",
                    "description": "Simbachain Blockchain abstraction and interaction library",
                    "repository": "https://github.com/simbachain/libsimba-js",
                    "site": "https://github.com/simbachain/libsimba-js"
                },
                "test": {
                    "source": "./test/",
                    "interfaces": ["describe", "it", "context", "suite", "test"],
                    "includes": ["(spec|Spec|test|Test)\\.js$"],
                    "excludes": ["\\.config\\.js$"]
                }
            }
        },
        {
            "name": "esdoc-ecmascript-proposal-plugin",
            "option": {
                "all": true
            }
        }
    ]
}
